<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Select_a_Location_for_InPerson_Event</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
TEXT( Event_Type__c ) != &apos;Virtual&apos;,
ISBLANK(Location__c)
)</errorConditionFormula>
    <errorDisplayField>Location__c</errorDisplayField>
    <errorMessage>Please select a Location for In-Person Event</errorMessage>
</ValidationRule>
